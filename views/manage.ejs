<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="shortcut icon" href="/favicon/favicon.ico" type="image/x-icon">
</head>
<body>
    <%-include("Header") %> %>
    <%-include("Navbar") %> %>
    <%-include("AdminNavbar") %> %>
    <div class="manageContainer">
        <h1>Manage Game</h1>
        <table>
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Description</td>
                    <td>Delete</td>
                    <td>Edit</td>
                </tr>
            </thead>
            <tbody>
                <% game.map((item) => { %>
                    <tr>
                        <td><%=item.name%></td>
                        <td>$<%=item.price%></td>
                        <td><%=item.description%></td>
                        <td><a href="/delete/<%=item._id%>" onclick="return confirm('Confirm delete?')" class="btn btn-danger">Delete</a></td>
                        <td>
                            <form action="/edit" method="POST">
                                <input type="hidden" name="edit_id" value="<%=item._id%>">
                                <button type="submit">Edit</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%-include("Footer") %>
</body>
</html>